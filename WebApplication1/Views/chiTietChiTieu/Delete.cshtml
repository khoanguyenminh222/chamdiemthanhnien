@model WebApplication1.Models.chiTietChiTieu

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xoá</title>
</head>
<body>
    <h3>Bạn chắc chắn muốn xoá?</h3>
    <div>
        <h4>Chi tiết chỉ tiêu</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Chỉ tiêu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.chiTieu.ten)
            </dd>
            <dt>
                Nội dung
            </dt>

            <dd>
                @Html.DisplayFor(model => model.noiDung)
            </dd>

            <dt>
                Điểm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.diem)
            </dd>

        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Xoá" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
</body>
</html>
