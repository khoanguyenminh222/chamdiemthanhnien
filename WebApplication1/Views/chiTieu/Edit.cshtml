@model WebApplication1.Models.chiTieu_chiTiet

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>chiTieu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.chiTieu.iD)

        <div class="form-group">
            @Html.LabelFor(model => model.chiTieu.fk_loaiChiTieu, "Loại chỉ tiêu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_loaiChiTieu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.chiTieu.fk_loaiChiTieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.chiTieu.ten, "Chỉ tiêu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.chiTieu.ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.chiTieu.ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />
        <div class="form-group row">
            <p>Các chi tiết chỉ tiêu</p>
            <table>
                @for (var i = 0; i < Model.chiTietChiTieu.Count; i++)
                {
                    <tr>
                        <td>@Html.HiddenFor(model => model.chiTietChiTieu[i].iD)</td>
                        <td>@Html.EditorFor(model => model.chiTietChiTieu[i].noiDung)</td>
                        <td>@Html.EditorFor(model => model.chiTietChiTieu[i].diem)</td>
                    </tr>
                }
            </table>
           
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
